<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="16dp"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="2dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">
        <!-- Tipo -->
        <RadioGroup
                android:id="@+id/tTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
            <RadioButton
                    android:id="@+id/tipoClassico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/classico"/>
            <RadioButton
                    android:id="@+id/tipoEsportivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esportivo"/>
            <RadioButton
                    android:id="@+id/tipoLuxo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luxo"/>
        </RadioGroup>
        <!-- Nome -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
        <EditText
                android:id="@+id/tNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        <!-- Desc -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descricao"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
        <EditText
                android:id="@+id/tDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <!-- Mais... -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:text="Para simplificar a demo, só podemos enviar o tipo, nome, descrição e a foto do Carro."
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>